@model WebApplication.Models.ViewModels.DeviceVM
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        @* Validation Server Side *@
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3"> Add Device Type</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeviceType.Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="DeviceType.AmountOfProperties"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="DeviceType.Name" class="form-control" />
                        <span asp-validation-for="DeviceType.Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="DeviceType.AmountOfProperties"  class="form-control" />
                        <span asp-validation-for="DeviceType.AmountOfProperties" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-action="Index" asp-controller="Properties" class="btn btn-primary w-75">Continue</a>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@* Validation Client Side *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

