@model WebApplication.Models.DeviceType
@{
    ViewData["Title"] = "CreateDeviceType";
}

<h1 class="text-center text-primary">Create Device Type</h1>

<form method="post">
    @if(Model != null )
    {
        <input asp-for="Id" hidden />
    }
    <div class="form-group">
        <label>Device Type</label>
        <input asp-for="Name" class="form-control" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <button asp-action="Set" class="btn btn-primary w-75">Submit</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-secondary w-75">Back</a>
            </div>
        </div>
    </div>
</form>

@* Validation Client Side *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}