@model WebApplication.Models.DeviceType
@{
    ViewData["Title"] = "CreateDeviceType";
}

<h1>Create Device Type</h1>

<form method="post" asp-action="Set">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label>Device Type</label>
        <input asp-for="Name" class="form-control" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <button class="btn btn-info w-75">Submit</button>
            </div>
            <div class="col">
                <button asp-action="Index" class="btn btn-danger w-75">Back</button>
            </div>
        </div>
    </div>
</form>

@* Validation Client Side *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}